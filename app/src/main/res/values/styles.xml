<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Gotham_Light">
        <item name="fontType">Gotham_Light</item>
    </style>

    <style name="Gotham_Book">
        <item name="fontType">Gotham_Book</item>
    </style>

    <style name="Gotham_Medium">
        <item name="fontType">Gotham_Medium</item>
    </style>

    <style name="Gotham_Bold">
        <item name="fontType">Gotham_Bold</item>
    </style>

    <style name="Gothan_BookItalic">
        <item name="fontType">Gotham_BookItalic</item>
    </style>

    <style name="Gotham_Black">
        <item name="fontType">Gotham_Black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
